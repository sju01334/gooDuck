<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/secondary"
        android:padding="30dp"
        android:orientation="vertical"
        tools:context=".ui.main.SignupActivity">



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="회원가입"
            android:textSize="20sp"
            android:textColor="@color/primary"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical">

            <EditText
                android:id="@+id/nicknameEdt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:background="@drawable/lightgray_rectangle_r5"
                android:drawableStart="@drawable/resize_nickname_yellow"
                android:drawablePadding="10dp"
                android:inputType="text"
                android:maxLines="1"
                android:layout_weight="1"
                android:hint="닉네임"/>

            <Button
                android:id="@+id/nickDupBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:backgroundTint="@color/primary"
                android:text="중복체크"
                android:textColor="@color/white" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical">

            <EditText
                android:id="@+id/emailEdt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:background="@drawable/lightgray_rectangle_r5"
                android:drawableStart="@drawable/resize_email_yellow"
                android:drawablePadding="10dp"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:layout_weight="1"
                android:hint="이메일"/>

            <Button
                android:id="@+id/emailDupBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:layout_marginLeft="10dp"
                android:backgroundTint="@color/primary"
                android:text="중복체크"/>



        </LinearLayout>

        <EditText
            android:id="@+id/passwordEdt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:padding="10dp"
            android:background="@drawable/lightgray_rectangle_r5"
            android:drawableStart="@drawable/resize_lock_yellow"
            android:drawablePadding="10dp"
            android:inputType="textPassword"
            android:maxLines="1"
            android:hint="비밀번호"/>


        <EditText
            android:id="@+id/pwCheckEdt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:paddingTop="13dp"
            android:paddingLeft="50dp"
            android:paddingBottom="13dp"
            android:background="@drawable/lightgray_rectangle_r5"
            android:inputType="textPassword"
            android:maxLines="1"
            android:hint="비밀번호 확인"/>

        <EditText
            android:id="@+id/phoneEdt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:padding="10dp"
            android:background="@drawable/lightgray_rectangle_r5"
            android:drawableStart="@drawable/resize_phone_yellow"
            android:drawablePadding="10dp"
            android:inputType="textPassword"
            android:maxLines="1"
            android:hint="핸드폰 번호"/>

        <Button
            android:id="@+id/signUpBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_button_yellow"
            android:layout_marginTop="30dp"
            android:textSize="18sp"
            android:text="가입하기"
            android:textColor="@color/white" />




    </LinearLayout>
</layout>
